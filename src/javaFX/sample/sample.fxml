<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" minHeight="120" minWidth="120" vgap="10"
          fx:controller="javaFX.sample.Controller"
          xmlns:fx="http://javafx.com/fxml">
      <Label fx:id="text" text="Hello, world!" GridPane.rowIndex="0">
         <font>
            <Font name="Times New Roman" size="20.0" />
         </font></Label>
      <Button onAction="#myAction" text="Push Me"
                                              GridPane.rowIndex="1" />
      <Button onAction="#clean" text="C" prefWidth="40" prefHeight="40"
              GridPane.rowIndex="2" />
      <Button onAction="#add" text="+" prefWidth="40" prefHeight="40"
              GridPane.rowIndex="2" GridPane.columnIndex="3"/>
      <Button onAction="#calc" text="=" prefWidth="40" prefHeight="40"
              GridPane.rowIndex="2" GridPane.columnIndex="2"/>

      <Button onAction="#one" text="1" prefWidth="40" prefHeight="40"
              GridPane.rowIndex="8" GridPane.columnIndex="0"/>
      <Button onAction="#two" text="2" prefWidth="40" prefHeight="40"
              GridPane.rowIndex="8" GridPane.columnIndex="1"/>
</GridPane>
